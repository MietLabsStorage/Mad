<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mad.Pages.EditNotePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="EditNotePage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="placeholder" TargetType="Label">
                <Setter Property="TextColor" Value="Gray" />
                <Setter Property="Margin" Value="0, -10, 0, 0" />
                <Setter Property="FontSize" Value="8" />
            </Style>
            <Style x:Key="formInput" TargetType="View">
                <Setter Property="WidthRequest" Value="200" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <VerticalStackLayout
        Margin="10"
        HorizontalOptions="Center"
        Spacing="10">
        <Entry Placeholder="Название" Style="{StaticResource formInput}" />
        <Label Style="{StaticResource placeholder}" Text="Название" />
        <Editor
            MinimumHeightRequest="200"
            Placeholder="Сообщение"
            Style="{StaticResource formInput}" />
        <Label Style="{StaticResource placeholder}" Text="Сообщение" />

        <Button
            x:Name="SaveBtn"
            Clicked="SaveBtn_Clicked"
            Text="Сохранить" />

        <Button
            x:Name="BackBtn"
            Clicked="BackBtn_Clicked"
            Text="Назад" />
    </VerticalStackLayout>
</ContentPage>