<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mad.Pages.Menu.MenuPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="EditNotePage">
    <VerticalStackLayout
        Margin="10"
        HorizontalOptions="Center"
        Spacing="10">
        <Button
            x:Name="CreateNote"
            Clicked="CreateNote_Clicked"
            Text="Новая заметка" />
         <Button
            x:Name="Weather"
            Clicked="Weather_Clicked"
            Text="Погода" />
         <Button
            x:Name="Settings"
            Clicked="Settings_Clicked"
            Text="Настройки" />
    </VerticalStackLayout>
</ContentPage>