<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mad.Pages.Menu.MenuPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="EditNotePage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="formInput" TargetType="View">
                <Setter Property="WidthRequest" Value="300" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <VerticalStackLayout
        Margin="10"
        HorizontalOptions="Center"
        Spacing="10">
        <Button
            x:Name="CreateNote"
            Clicked="CreateNote_Clicked"
            Style="{StaticResource formInput}"
            Text="Новая заметка" />
        <Button
            x:Name="Notes"
            Clicked="Notes_Clicked"
            Style="{StaticResource formInput}"
            Text="Заметки" />
        <Button
            x:Name="Weather"
            Clicked="Weather_Clicked"
            Style="{StaticResource formInput}"
            Text="Погода" />
        <Button
            x:Name="Settings"
            Clicked="Settings_Clicked"
            Style="{StaticResource formInput}"
            Text="Настройки" />
    </VerticalStackLayout>
</ContentPage>