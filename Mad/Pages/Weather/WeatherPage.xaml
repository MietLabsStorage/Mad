<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mad.Pages.Weather.WeatherPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="EditNotePage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <FlexLayout Grid.Row="0" JustifyContent="End" VerticalOptions="Center">
            <Button x:Name="Reload" Text="O" Clicked="Reload_Clicked"></Button>
        </FlexLayout>
    <ScrollView Orientation="Vertical" HorizontalScrollBarVisibility="Always" Grid.Row="1">
            <HorizontalStackLayout
        Margin="10"
        VerticalOptions="Center"
        Spacing="10">
        <Button
            x:Name="w1"
            Text="w1" />
         <Button
            x:Name="w2"
            Text="w2" />
         <Button
            x:Name="w3"
            Text="w3" />
        </HorizontalStackLayout>
    </ScrollView>
    </Grid>
</ContentPage>